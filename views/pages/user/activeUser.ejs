<%- include('../../partials/header'); %> 
<div class="Active-user">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="user-token-form">
                    <h3>Add Activation Code In user</h3>
                    <form action="/activeUser" method="POST">
                        <div class="form-group">
                           <input type="text" class="form-control" placeholder="UserId" name="UserId" required>
                        </div>
                        <div class="form-group">
                            <select class="form-control" name="activeUser" id="activeUser">
                               <option>Select Status</option>
                               <option value="true">true</option>
                               <option value="false">false</option>
                             </select>
                         </div>
                        <div class="form-group">
                            <input type="email" class="form-control" placeholder="Email" name="email" required>
                         </div>
                         <div class="form-group">
                            <input type="text" class="form-control" placeholder="name" name="name" required>
                         </div>
                        <div class="form-group">
                           <button class="btn btn-small bcm-btn-red"  type="submit">Add</button>
                        </div>
                     </form>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer'); %>