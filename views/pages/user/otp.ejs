<%- include('../../partials/header'); %> 
<div class="reset-password">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="password-reset-body">
                    <p class="profile-note"><em><span>*</span> OTP is valid for 24 hours only.</em></p>
                    <div class="reset-heading">
                       <h1>Enter OTP</h1>
                       <form method="post" action="/otp-confirmation">
                        <div class="form-group">
                            <label class="label-important">OTP</label>
                            <input type="text" class="form-control" placeholder="OTP" name="otp">
                         </div>
                         <div class="form-group">
                            <label class="label-important">Password</label>
                            <input type="password" class="form-control" placeholder="Password" name="password">
                         </div>
                         <input type="hidden" value="<%=id%>" name="id">
                            <br>
                            <button type="submit" class="btn bcm-btn-red">Submit</button>
                       </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer'); %>